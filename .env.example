# ==============================
# MeetingMind — Environment Variables
# ==============================
# Copy this file to .env and fill in your values.
# Lines starting with # are comments and are ignored.

# ---- Core ----
NODE_ENV=development
MOCK_MODE=true
SESSION_SECRET=
PORT=3000
ADMIN_SECRET=
ADMIN_EMAIL=
APP_URL=http://localhost:3000

# ---- Database ----
# Local dev: leave blank (defaults to ./data.db)
# Render: set to persistent disk path, e.g. /var/data/data.db
DATABASE_PATH=

# ---- AI (not needed when MOCK_MODE=true) ----
CLAUDE_API_KEY=
OPENAI_API_KEY=

# ---- Email (not needed when MOCK_MODE=true) ----
RESEND_API_KEY=
EMAIL_FROM=MeetingMind <no-reply@yourdomain.com>

# ---- OAuth — Google (optional, enables "Continue with Google") ----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ---- OAuth — Apple (optional, enables "Continue with Apple") ----
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ---- Stripe (optional, enables billing) ----
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_BASIC_MONTHLY=
STRIPE_PRICE_PRO_MONTHLY=

# ---- Zoom (optional, enables Zoom meeting import) ----
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
